<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <%= restaurant.description %><br>
      <ul>
      <% restaurant.reviews.all.each do |review| %>
         <li><%= review.thoughts %></li>
      <% end %>
    </ul>
      <% unless (current_user.nil?) || (current_user.has_reviewed? restaurant) %>
      <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %><br>
      <% end %>
      <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %><br>
      <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    </h2>
  <% end %>
<% else %>
  No restaurants yet
<% end %>

<%= link_to('Add a restaurant', new_restaurant_path) %>
